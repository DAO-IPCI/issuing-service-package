<launch>
    <arg name="validator" default="0x0000000000000000000000000000000000000000" />
    <arg name="lighthouse" default="0xD40AC7F1e5401e03D00F5aeC1779D8e5Af4CF9f1" />
    <arg name="token" default="0x7dE91B204C1C737bcEe6F000AAA6569Cf7061cb7" />
    <arg name="contract_abi" default="$(find issuing_service_agent)/abi/EnergyTokenPetersburg.json)" />
    <arg name="network" default="mainnet" />
    <arg name="gasprice" default="3" />

    <group ns="checker">
        <node name="checker" pkg="issuing_service_agent" type="checker_node" output="screen">
            <param name="lighthouse" value="$(arg lighthouse)" />
            <param name="model" value="QmUB6ajZTLLMZg7re1v4hw44aoG8HDQDHr9JyujU264Aw2" />
            <param name="token" value="$(arg token)" />
            <param name="validator" value="$(arg validator)" />
            <param name="order_lifetime" value="100" />
        </node>
    </group>

    <group ns="issuer">
        <node name="issuer" pkg="issuing_service_agent" type="issuer_node" output="screen">
            <param name="energy_contract_json" textfile="$(arg contract_abi)" />
            <param name="network" value="$(arg network)" />
            <param name="gasprice" value="$(arg gasprice)" />
        </node>
    </group>
</launch>

